<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!--TODO: change parent to Theme.AppCompat.Light ???-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_lemon</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
    </style>

    <style name="textStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LemonTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/color_lemon</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
        <item name="android:textColorPrimaryInverse">@color/cardview_shadow_start_color</item>
    </style>
</resources>
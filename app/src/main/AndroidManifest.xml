<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slack.geekbrainswork.ai">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".LemonStateAdminApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.activities.UpdateSiteActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activities.AddSiteActvity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.UserUpdateActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.UserAddActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.RegistrationUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.SendPasswordActivity"
            android:label="@string/forgot_password_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.UpdatePersonActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.activities.AddPersonActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.activities.UpdateKeywordActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.activities.AddKeywordActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>
</manifest>